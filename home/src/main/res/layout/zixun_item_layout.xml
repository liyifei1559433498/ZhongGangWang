<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="108dp">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp"
            android:layout_toLeftOf="@+id/ziXunPic"
            android:ellipsize="end"
            android:lines="2"
            android:text="2月5日天津源泰德润方矩管价格调整"
            android:textColor="@color/home_news_item_title_color"
            android:textSize="16sp" />


        <ImageView
            android:id="@+id/ziXunPic"
            android:layout_width="112dp"
            android:layout_height="84dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="16dp" />


        <TextView
            android:id="@+id/newTab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginBottom="12dp"
            android:text="今日推荐"
            android:textColor="@color/home_news_state_color" />

        <LinearLayout
            android:id="@+id/picLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="12dp"
            android:layout_toRightOf="@+id/newTab"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/timeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20-05 9:30"
                android:textColor="@color/home_text_gray" />

            <TextView
                android:id="@+id/readCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="1243 阅读"
                android:textColor="@color/home_text_gray" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/noPicLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/noPicTimeTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20-05 9:30"
                android:textColor="@color/home_text_gray" />

            <TextView
                android:id="@+id/noPicReadCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="1243 阅读"
                android:textColor="@color/home_text_gray" />

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
